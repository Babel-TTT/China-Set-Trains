//Begin CA18GEN4


// Graphics

// Purchase Menu
spriteset (spriteset_ca18gen4_purchase, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_purchase ("coaches/18","ca18gen4")
}

// Vehicle

spriteset (spriteset_ca18gen4_origin, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("coaches/18","ca18gen4")
}

switch (FEAT_TRAINS, SELF, switch_ca18gen4_articulated_part, extra_callback_info1) {
    1..2: return ca18gen4;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}



switch (FEAT_TRAINS, SELF, switch_ca18gen4_graphics, position_in_articulated_veh % 3) {
    1: spriteset_ca18gen4_origin;
    empty_sprites;
}


switch (FEAT_TRAINS, SELF, switch_ca18gen4_capacity, position_in_articulated_veh % 3) {
    1: return 40;
    return 0;
}


item (FEAT_TRAINS, ca18gen4) {
    property {
        // Menu
        name:                           string(STR_NAME_CA18_4);
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        variant_group:					yw18gen4;

        // Availability
        climates_available:             ALL_CLIMATES;
        introduction_date:              date(1995,01,01);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   30;
        track_type:                     DBDN;

        // Cargo
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:   0;
        cargo_allow_refit:              [PASS, TOUR, YETI, YETY];
        cargo_disallow_refit:           [];
        refit_cost:                     0;
        default_cargo_type:             PASS;
        ai_special_flag:                AI_FLAG_PASSENGER;
        cargo_capacity:                 16;
        loading_speed:                  8 << param_loading_speed;
        cargo_age_period:               185 << param_cargo_decay;

        // Stats
        speed:                          160 km/h;
        power:                          0 hp;
        weight:                         57 ton;
        cost_factor:                    8;
        running_cost_base:              RUNNING_COST_ELECTRIC;
        running_cost_factor:            6;
    }
    graphics {
        // Menu
        additional_text:                string(STR_DESC_5, string(STR_FULL_NAME_CA18), string(STR_NO_AIR_CONDITIONER), string(STR_CAFE_EFFECT),  string(STR_COMFORT_MEDIUM, 192));
        can_attach_wagon:               locowagon;

        // Graphics
        default:                        switch_ca18gen4_graphics;
        purchase:                       spriteset_ca18gen4_purchase;
        articulated_part:               switch_ca18gen4_articulated_part;

        // Stats
        length:                         switch_length_2_8_2;
        cargo_capacity:                 switch_ca18gen4_capacity;
        cargo_age_period:               (12 * 4 * cafedecayfactor()) << param_cargo_decay;
        cost_factor:                    17;
        running_cost_factor:            14 * runningcostfactor() * cafecostfactor();
        purchase_running_cost_factor:   56;
        purchase_cargo_capacity:        40/3;
        name:                           switch_18_name;

    }
}

// End CA18GEN4
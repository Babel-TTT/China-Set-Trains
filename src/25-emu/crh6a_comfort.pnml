switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_wagon_running, vehicle_is_potentially_powered) {
    1: switch_crh6a_comfort_wagon_running_power;
    switch_crh6a_comfort_wagon_running_unpower;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_wagon_power, position_in_consist % 24) {
    0..2: return 0;
    3..8: return 1462;
    9..11: return 0;
    12..14: return 1462;
    15..17: return 0;
    18..20: return 1462;
    21..23: return 0;
    return 0;
} // T-M-M-T-M-T-M-T (IRL: TMMTTMMT, but compromise for gameplay)

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_wagon_traction, vehicle_is_potentially_powered) {
    1: return int(0.16*255);
    return 0;
}


item (FEAT_TRAINS, crh6a_comfort) {
    property {
        // Menu
        name:                           string(STR_NAME_CRH6A_COMFORT);
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT, TRAIN_FLAG_MU);
        engine_class:                   ENGINE_CLASS_ELECTRIC;
        variant_group:					crh6a2;

        // Availability
        climates_available:             ALL_CLIMATES;
        introduction_date:              date(2018,01,01);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   25;
        track_type:                     SABA;

        // Cargo
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:   0;
        cargo_allow_refit:              [PASS, TOUR, YETI, YETY];
        cargo_disallow_refit:           [];
        refit_cost:                     0;
        default_cargo_type:             PASS;
        ai_special_flag:                AI_FLAG_PASSENGER;
        cargo_capacity:                 1;
        loading_speed:                  12 << param_loading_speed;
        cargo_age_period:               400 << param_cargo_decay;

        // Stats
        speed:                          200 km/h;
        power:                          1090 kW;
        weight:                         48 ton;
        tractive_effort_coefficient:    0.16;
        cost_factor:                    61;
        running_cost_base:              RUNNING_COST_ELECTRIC;
        running_cost_factor:            26;
        reliability_decay:              8;
        bitmask_vehicle_info:           bitmask(2);
    }
    graphics {
        // Menu
        additional_text:                string(STR_DESC_5, string(STR_CRH6A_COMFORT_CAN_ATTACH_WAGON), string(STR_RELDEC_LOW, 8), string(STR_CRH6A_CONSIST), string(STR_CRH6A_COMFORT_HEAD_SEAT));
        can_attach_wagon:               onlyzezyzec;
        start_stop:                     mu4to24car;

        // Graphics
        default:                        switch_crh6a_comfort_graphics;
        purchase:                       spriteset_crh6a_purchase_guangshen;
        articulated_part:               switch_crh6a_comfort_articulated_part;

        // Stats
        length:                         switch_length_2_8_2;
        power:                          return 0;
        purchase_power:                 return 1462;
        tractive_effort_coefficient:    return 0;
        purchase_tractive_effort_coefficient: return int(0.16*255);
        cargo_capacity:                 switch_crh6a_comfort_head_capacity;
        cargo_age_period:               100 * cafedecayfactor()<< param_cargo_decay;
        cost_factor:                    66;
        running_cost_factor:            52 * runningcostfactor() + 20;
        purchase_running_cost_factor:   228;
        purchase_cargo_capacity:        150/3;
        name:                           switch_crh6a2_name;
    }

    // Multiple Unit Wagons
    livery_override(zemuw) {
        default:                        switch_crh6a_comfort_wagon_graphics;
        cargo_capacity:                 switch_crh6a_comfort_wagon_capacity;
        power:                          switch_crh6a_comfort_wagon_power;
        tractive_effort_coefficient:    switch_crh6a_comfort_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         48;
        can_attach_wagon:               muhead;
        cargo_age_period:               (60 * cafedecayfactor()) << param_cargo_decay;
        bitmask_vehicle_info:           switch_crh_wagon_bitmask;
        articulated_part:               switch_crh_wagon_articulated_part;
/*         cost_factor:                    switch_crh6a_comfort_wagon_cost; */
        running_cost_factor:            switch_crh6a_comfort_wagon_running() * runningcostfactor() + accostfactor();
    }
    livery_override(zymuw) {
        default:                        switch_crh6a_comfort_wagon_graphics;
        cargo_capacity:                 switch_crh6a_comfort_wagon_capacity;
        power:                          switch_crh6a_comfort_wagon_power;
        tractive_effort_coefficient:    switch_crh6a_comfort_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         48;
        can_attach_wagon:               muhead;
        cargo_age_period:               (100 * cafedecayfactor()) << param_cargo_decay;
        bitmask_vehicle_info:           switch_crh_wagon_bitmask;
        articulated_part:               switch_crh_wagon_articulated_part;
/*         cost_factor:                    switch_crh6a_comfort_wagon_cost; */
        running_cost_factor:            switch_crh6a_comfort_wagon_running() * runningcostfactor() + accostfactor();
    }
    livery_override(zecmuw) {
        default:                        switch_crh6a_comfort_wagon_graphics;
        cargo_capacity:                 switch_crh6a_comfort_wagon_capacity;
        power:                          switch_crh6a_comfort_wagon_power;
        tractive_effort_coefficient:    switch_crh6a_comfort_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         48;
        can_attach_wagon:               muhead;
        cargo_age_period:               (60 * cafedecayfactor()) << param_cargo_decay;
        bitmask_vehicle_info:           switch_crh_wagon_bitmask;
        articulated_part:               switch_crh_wagon_articulated_part;
/*         cost_factor:                    switch_crh380a_wagon_cost; */
        running_cost_factor:            switch_crh6a_comfort_wagon_running()* runningcostfactor() + 50 + accostfactor(); // IT IS A RESTAURANT CAR!
    }
}

// End CRH6A_COMFORT
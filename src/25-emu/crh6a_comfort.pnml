// Begin CRH6A_COMFORT
// Graphics

// Purchase Menu
spriteset (spriteset_crh6a_purchase_guangshen, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_purchase ("25-emu", "crh6a/crh6a-c-guangshen-1")
}

// Vehicle


spriteset (spriteset_crh6a_front_guangshen, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("25-emu", "crh6a/crh6a-c-guangshen-1")
}
spriteset (spriteset_crh6a_middle_m_guangshen, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("25-emu", "crh6a/crh6a-m-2-guangshen")
}
spriteset (spriteset_crh6a_middle_p_guangshen, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("25-emu", "crh6a/crh6a-p-2-guangshen")
}
spriteset (spriteset_crh6a_middle_p_r_guangshen, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("25-emu", "crh6a/crh6a-p-r-2-guangshen")
}
spriteset (spriteset_crh6a_cab_guangshen, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_reversed ("25-emu", "crh6a/crh6a-c-guangshen-2")
}


switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_articulated_part, extra_callback_info1) {
    1..2: return crh6a_comfort;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}


switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_graphics, position_in_articulated_veh % 3) {
    1: spriteset_crh6a_front_guangshen;
    empty_sprites;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_head_capacity, position_in_articulated_veh % 3) {
    1: return 150;
    return 0;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_middle_wagon_back, (position_in_consist_from_end / 3) + 1 - (num_vehs_in_consist / 24)) {
    2: spriteset_crh6a_middle_p_r_guangshen;
    4: spriteset_crh6a_middle_p_guangshen;
    spriteset_crh6a_middle_m_guangshen;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_middle_wagon_front, (position_in_consist / 3) + 1 - (num_vehs_in_consist / 24)) {
    2: spriteset_crh6a_middle_p_guangshen;
    4: spriteset_crh6a_middle_p_r_guangshen;
    spriteset_crh6a_middle_m_guangshen;
}


switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_if_middle_wagon_front_or_back, (position_in_consist / 3) + 1 <= (num_vehs_in_consist / 6)) {
    1: switch_crh6a_comfort_middle_wagon_front;
    switch_crh6a_comfort_middle_wagon_back;
}


switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_middle_wagon_long, (((position_in_consist / 3) + 1) == (num_vehs_in_consist / 6)) || ((position_in_consist / 3) == (num_vehs_in_consist / 6))) {
    1: spriteset_crh6a_middle_m_guangshen;
    switch_crh6a_comfort_if_middle_wagon_front_or_back;
}



switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_if_middle_wagon_tp_short, (position_in_consist / 3) + 1 - (num_vehs_in_consist / 12)) {//8节时，后面的参数为2，此时4,6节有动力
    2: spriteset_crh6a_middle_p_guangshen;
    4: spriteset_crh6a_middle_p_r_guangshen;
    spriteset_crh6a_middle_m_guangshen;
}


switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_length_class, num_vehs_in_consist / 3) {
    2..12:   switch_crh6a_comfort_if_middle_wagon_tp_short;
    switch_crh6a_comfort_middle_wagon_long;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_if_wagon_end, position_in_consist_from_end == 1) {
    1: spriteset_crh6a_cab_guangshen;
    switch_crh6a_comfort_length_class;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_wagon_graphics, (position_in_consist_from_end % 3) == 1) {
    1: switch_crh6a_comfort_if_wagon_end;
    empty_sprites;
}




switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_wagon_length, position_in_consist_from_end) {
    switch_length_2_8_2;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_middle_capacity_1, vehicle_type_id) {
    1024: return 87;
    1025: return 60;
    1035: return 54;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_middle_capacity, position_in_articulated_veh % 3) {
    1: switch_crh6a_comfort_middle_capacity_1;
    return 0;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_cab_capacity_1, vehicle_type_id) {
    1024: return 76;
    1025: return 48;
    1035: return 22;
    return 0;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_cab_capacity, position_in_articulated_veh % 3) {
    1: switch_crh6a_comfort_cab_capacity_1;
    return 0;
}

switch (FEAT_TRAINS, SELF, switch_crh6a_comfort_wagon_capacity, position_in_consist_from_end) {
    0..2: switch_crh6a_comfort_cab_capacity;
    switch_crh6a_comfort_middle_capacity;
}

